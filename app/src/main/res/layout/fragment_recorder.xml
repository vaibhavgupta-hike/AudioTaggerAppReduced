<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".recorder.RecorderFragment">

    <TextView
        android:id="@+id/instructionTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textFontWeight="700"
        android:text="Please read the text below"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:background="@drawable/stroke_bg"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/instructionTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recFileNameLabel"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/questionTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center" />

    </ScrollView>

    <TextView
        android:id="@+id/recFileNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filename: "
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:lines="2"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/recordBtn"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/recFileName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/no_file"
        android:gravity="center"
        android:textAlignment="center"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/recFileNameLabel"
        app:layout_constraintBottom_toBottomOf="@id/recFileNameLabel"
        app:layout_constraintStart_toEndOf="@id/recFileNameLabel"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Submit"
        android:textAlignment="center"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/recordBtn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Record"
        android:textAlignment="center"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/submitBtn"
        app:layout_constraintEnd_toStartOf="@id/deleteBtn"/>

    <Button
        android:id="@+id/deleteBtn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Delete"
        android:textAlignment="center"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>